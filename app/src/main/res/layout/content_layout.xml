<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="100dp"
        android:text="@string/default_text"
        android:id="@+id/factTextView"
        style="@style/TextAppearance.AppCompat.Headline"
        android:paddingLeft="@dimen/activity_left_margin"
        android:paddingRight="@dimen/activity_right_margin"
        android:layout_alignStart="@+id/newFactButton"
        android:gravity="center_horizontal"
        android:layout_alignEnd="@+id/newFactButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonValue"
        android:id="@+id/newFactButton"
        android:theme="@style/PrimaryButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:minHeight="60dp"
        android:textColor="#FFFFFF"
        android:elevation="30dp"/>


</RelativeLayout>