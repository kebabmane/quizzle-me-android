<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor_500</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor_700</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/button_alt</item>
        <item name="colorButtonNormal">@color/button_blue</item>
    </style>

</resources>